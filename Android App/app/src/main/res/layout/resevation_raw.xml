<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/session_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:lines="1"
            android:paddingTop="20dp"
            android:text="Nom de la séance" />

        <TextView
            android:id="@+id/session_date"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:lines="1"
            android:paddingTop="2dp"
            android:text="Date de la séance" />

        <TextView
            android:id="@+id/reservation_date"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:lines="1"
            android:paddingTop="2dp"
            android:text="Date de réservation" />


        <TextView
            android:id="@+id/reservation_time"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:lines="1"
            android:paddingTop="2dp"
            android:text="Heure de réservation" />


        <TextView
            android:id="@+id/user_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:lines="2"
            android:paddingTop="2dp"
            android:text="Nom de l'utilisateur" />



    </LinearLayout>


</androidx.cardview.widget.CardView>